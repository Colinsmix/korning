<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Employee Name</th>
      <th>Employee Email</th>
      <!-- More attributes here... -->
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.name, employee %></td>
        <!-- More attributes here... -->
        <td><%= mail_to employee.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>